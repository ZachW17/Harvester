using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Microsoft.Xna.Framework;
using Microsoft.Xna.Framework.Graphics;

namespace Harvester
{
    /// <summary>
    /// BULLETS!
    /// </summary>
    public abstract class Bullet : MovableGameObject
    {
        // the amount of damage that this bullet does
        protected double damage;

        /// <summary>
        /// Damage of the bullet
        /// </summary>
        public double Damage
        {
            get { return damage; }
            set { damage = value; }
        }

        /// <summary>
        /// Creates a new bullet with a position/size,
        /// texture, and speed based on parameters. Also
        /// sets the damage of the bullet
        /// </summary>
        /// <param name="objPos">The position and size of the bullet</param>
        /// <param name="objTexture">The texture of the bullet</param>
        /// <param name="objSpeed">The speed of the bullet</param>
        /// <param name="objDmg">The damage of the bullet</param>
        public Bullet(Rectangle objPos, Texture2D objTexture, double objSpeed, double objDmg)
            : base(objPos, objTexture, objSpeed)
        {
            damage = objDmg;
        }
    }
}
