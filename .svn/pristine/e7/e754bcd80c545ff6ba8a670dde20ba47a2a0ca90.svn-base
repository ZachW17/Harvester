using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Microsoft.Xna.Framework;
using Microsoft.Xna.Framework.Audio;
using Microsoft.Xna.Framework.Content;
using Microsoft.Xna.Framework.GamerServices;
using Microsoft.Xna.Framework.Graphics;
using Microsoft.Xna.Framework.Input;
using Microsoft.Xna.Framework.Media;


namespace Harvester
{
    /// <summary>
    /// Menu that will be displayed when the player pauses the game
    /// </summary>
    public class GamePause : Menu
    {
        // Attributes

        // Buttons for the pause menu
        private Button pauseButton;
        private Button quitButton;


        // Properties of the attributes
        #region properties
        public Button PauseButton
        {
            get { return pauseButton; }
            set { pauseButton = value; }
        }
        public Button QuitButton
        {
            get { return quitButton; }
            set { quitButton = value; }
        }
        #endregion


        public GamePause(Engine theGame)
            : base(theGame)
        {
            Initialize();
            LoadContent();
        }

        public override void Initialize()
        {
            base.Initialize();
        }

        protected override void LoadContent()
        {
            pauseButton = new Button(new Rectangle(440, 272, 400, 400), AssetManager.Instance.FindTexture("pause_icon"));
            //playButton = new Button(new Rectangle(850, 372, 400, 400), AssetManager.Instance.FindTexture("play_icon"));
            quitButton = new Button(new Rectangle(230, 372, 400, 400), AssetManager.Instance.FindTexture("quit_icon"));
        }

        public override void Update(GameTime gameTime)
        {
            currentMouseState = Mouse.GetState();
            if (currentMouseState.LeftButton == ButtonState.Pressed && previousMouseState.LeftButton == ButtonState.Released)
            {

            }

            if (pauseButton.ObjectPosition.Contains(new Point(currentMouseState.X, currentMouseState.Y)))
            {
                if (currentMouseState.LeftButton == ButtonState.Pressed && previousMouseState.LeftButton == ButtonState.Released)
                {
                        gameEngine.CurrentState = Gamestate.Gameplay;
                    
                }
            }


            if (quitButton.ObjectPosition.Contains(new Point(currentMouseState.X, currentMouseState.Y)))
            {
                if (currentMouseState.LeftButton == ButtonState.Pressed && previousMouseState.LeftButton == ButtonState.Released)
                {
                        gameEngine.CurrentState = Gamestate.GameOver;
                    
                }
            }
            //get prev mouse state
            previousMouseState = Mouse.GetState();

        }

        public override void Draw(GameTime gameTime, SpriteBatch spriteBatch)
        {
            pauseButton.Draw(spriteBatch);
            quitButton.Draw(spriteBatch);
        }

    }
}
